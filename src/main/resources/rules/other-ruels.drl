import com.wf.rules.domain.CustomRules;
global com.wf.rules.domain.RulesList rulesList;

dialect "mvel"

rule "Counterparty name based rule"
	when
		CustomRules(nm=="CITI")
	then
		rulesList.setList("Transaction for CITI are kept on hold")
end
rule "Payment Rail based rule"
	when
		CustomRules(pmtRail=="RTL")
	then
		rulesList.setList("All retail transactions kept on hold")
end