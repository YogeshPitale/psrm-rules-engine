import com.wf.rules.domain.CustomRules;
global com.wf.rules.domain.RulesList rulesList;

dialect "mvel"

rule "On Hold based rule"
	when
		CustomRules(throttleValue || nm=="CITI" || pmtRail=="RTL" || throttleValue || debitAmt > dynamicAmount || debitAmt > (cap*throttleMaxAvailable))
	then
		rulesList.setStatusOnHold(true)
end